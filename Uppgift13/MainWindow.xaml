<Window x:Class="Uppgift13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift13"
        mc:Ignorable="d"
        Title="Bokstavssök" Height="450" Width="800">
    <Grid>
        <Label Content="Skriv in text" HorizontalAlignment="Left" Margin="31,39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="31,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Height="167"/>
        <Label Content="Sök efter" HorizontalAlignment="Left" Margin="31,259,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="searchTxt" HorizontalAlignment="Left" Margin="31,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="57" Height="31"/>
        <Button x:Name="countBtn" Content="Räkna" HorizontalAlignment="Left" Margin="97,285,0,0" VerticalAlignment="Top" Height="31" Width="57" Click="countBtn_Click"/>
        <Label Content="Resultat" HorizontalAlignment="Left" Margin="312,259,0,0" VerticalAlignment="Top"/>
        <Label x:Name="resultLbl" Content="" HorizontalAlignment="Left" Margin="312,285,0,0" VerticalAlignment="Top" Width="389" Height="31"/>

    </Grid>
</Window>
