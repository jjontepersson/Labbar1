        <Label x:Name="rättLbl" Content="" HorizontalAlignment="Left" Margin="248,345,0,0" VerticalAlignment="Top" Width="61"/>
        <Label x:Name="felLbl" Content="" HorizontalAlignment="Left" Margin="248,376,0,0" VerticalAlignment="Top" Width="61"/>
        <Label x:Name="procentLbl1" Content="50 %" HorizontalAlignment="Left" Margin="550,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="procentLbl2" Content="50 %" HorizontalAlignment="Left" Margin="218,110,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
